#!/usr/bin/env ruby

# frozen_string_literal: true

#
# Tic Tac Toe Game
#
require 'colorize'

$i = -1

while $i == -1
  board

  $player += 1

  if $player % 2 == 0
    $player = 2
    $mark = 'O'
    puts "\n\nPlayer #{$player}, enter a number: ".blue
  else
    $player = 1
    $mark = 'X'
    puts "\n\nPlayer #{$player}, enter a number: ".red
  end

  $choice = gets.chomp.to_i

  $i = checkwin
end

board

if $i == 1
  puts "\n\n* * * * * * * * * * * * * *"
  puts "* * *  Player #{$player} win   * * *"
  puts "* * * * * * * * * * * * * *"
else
  puts "\n\n* * * * * * * * * * * * *"
  puts "* * *   Game draw   * * *"
  puts "* * * * * * * * * * * * *"
end
